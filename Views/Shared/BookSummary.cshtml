@model Book
@*Put our book info in here to create the partial view*@
<div class="bg-dark list-group-item text-white text-md-left">

    <h5>Book Title: @Model.Title</h5>
    <h6>Written By: @Model.AuthorFirst @Model.AuthorMiddle@Model.AuthorLast</h6>
    <p>Publisher: @Model.Publisher</p>
    <p>ISBN #: @Model.ISBN</p>
    <p>Classifcation/Category: @Model.Category</p>
    <div class="card-text p-1">
        <p>Price: $@Model.Price.ToString()</p>
        <p>Number of Pages: @Model.NumPages</p>
    </div>

    <form id="@Model.BookID" asp-page="/Purchase" method="post">
        <input type="hidden" asp-for="BookID" />
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathandQuery()" />
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Purchase
            </button>
        </span>

    </form>

</div>
